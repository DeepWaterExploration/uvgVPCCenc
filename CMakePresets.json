{
  "version":3,
  "cmakeMinimumRequired":{
     "major":3,
     "minor":22,
     "patch":0
  },
  "configurePresets":[
     {
        "name":"base-config",
        "hidden":true,
        "generator":"Ninja",
        "binaryDir":"${sourceDir}/_build/${presetName}",
        "cacheVariables":{
           "BUILD_SHARED_LIBS":true,
           "CMAKE_BUILD_TYPE":"RelWithDebInfo",
           "CMAKE_EXPORT_COMPILE_COMMANDS":true,
           "ENABLE_TESTING":false,
           "ENABLE_CI_TESTING":false,
           "ENABLE_MY_TESTING":false,
           "MY_TEST_PATH": ""
        }
     },
     {
        "name":"Debug",
        "inherits":"base-config",
        "cacheVariables":{
           "CMAKE_BUILD_TYPE":"Debug"
        }
     },
     {
        "name":"RelWithDebInfo",
        "inherits":"base-config",
        "cacheVariables":{
           "CMAKE_BUILD_TYPE":"RelWithDebInfo",
           "ENABLE_TESTING":true
        }
     },
     {
        "name":"clang-tidy",
        "inherits":"base-config",
        "cacheVariables":{
           "CMAKE_BUILD_TYPE":"RelWithDebInfo",
           "USE_CLANG_TIDY":"ON"
        }
     },
     {
      "name":"CI",
      "inherits":"RelWithDebInfo",
      "generator":"Unix Makefiles",
      "cacheVariables":{
         "CMAKE_BUILD_TYPE":"RelWithDebInfo",
         "BUILD_SHARED_LIBS":false,
         "ENABLE_TESTING":true,
         "ENABLE_CI_TESTING":true,
         "ENABLE_MY_TESTING":false
      }
   }
  ],
  "buildPresets":[
     {
        "name":"Debug",
        "configurePreset":"Debug"
     },
     {
        "name":"RelWithDebInfo",
        "configurePreset":"RelWithDebInfo"
     },
     {
        "name":"clang-tidy",
        "configurePreset":"clang-tidy"
     },
     {
        "name":"CI",
        "inherits":"RelWithDebInfo",
        "configurePreset":"CI"
     }
  ],
  "testPresets":[
     {
        "name":"base-test",
        "hidden":true,
        "execution":{
           "stopOnFailure":true
        }
     },
     {
        "name":"Debug",
        "inherits":"base-test",
        "configurePreset":"Debug"
     },
     {
        "name":"RelWithDebInfo",
        "inherits":"base-test",
        "configurePreset":"RelWithDebInfo"
     },
     {
        "name":"CI",
        "inherits":"RelWithDebInfo",
        "configurePreset":"CI"
     }
  ]
}